{
  "manifest_version": 3,
  "name": "Spotify Extension",
  "version": "1.0",
  "description": "A Spotify Chrome Extension",

  "chrome_url_overrides": {
    "newtab": "dist/popup.html"  
  },

  "background": {
    "service_worker": "dist/index.js"  
  },

  "permissions": [
    "storage", 
    "identity",
    "tabs",
    "http://localhost:3000/*"
  ],

  "host_permissions": [
    "https://api.spotify.com/*",
    "http://localhost:3000/*"
  ],

  "action": {
    "default_popup": "dist/popup.html",  
    "default_icon": {
      "16": "src/icons/icon.png"
    }
  }
}

