{
  "manifest_version": 3,
  "name": "Spotify Extension",
  "version": "1.0",
  "description": "A Spotify Chrome Extension",
  
  "chrome_url_overrides": {
    "newtab": "extension/popup/popup.html"
  },
  
  "background": {
    "service_worker": "extension/background.ts"
  },
  
  "permissions": ["storage"],
  
  "action": {
    "default_popup": "extension/popup/popup.html",
    "default_icon": {
      "16": "extension/icons/icon.png"
    }
  }
}
